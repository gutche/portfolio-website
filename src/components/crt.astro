---
import { Image } from "astro:assets";
import crtImage from "../assets/crt.png";
---

<div class="hidden flex-1 md:flex items-center">
	<div
		style="position:relative;width:100%;padding-bottom:100%"
		data-radix-aspect-ratio-wrapper="">
		<div style="position:absolute;top:0;right:0;bottom:0;left:0">
			<div class="p-1 md:p-16 h-full">
				<div class="relative h-full w-full p-6">
					<div
						class="h-full w-full bg-neutral-900 rounded-3xl relative overflow-hidden">
						<div
							style="position:relative;width:100%;height:100%;overflow:hidden;pointer-events:auto">
							<div style="width:100%;height:100%">
								<canvas
									style="display: block; width: 722px; height: 722px;"
									data-engine="three.js r160"
									width="722"
									height="722"></canvas>
							</div>
						</div>
					</div>
					<Image
						alt="monitor"
						loading="lazy"
						decoding="async"
						data-nimg="fill"
						class="select-none pointer-events-none"
						style="position:absolute;height:100%;width:100%;left:0;top:0;right:0;bottom:0;color:transparent"
						sizes="100vw"
						src={crtImage}
					/>
				</div>
			</div>
		</div>
	</div>
</div>
