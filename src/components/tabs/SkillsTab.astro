---
import { type Skill, skills } from '../../data/skills';

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["tab-panel", className]} data-tab="skills">
    <div class="flex flex-col gap-4">
        <p class="text-base">
            Select a skill category to learn more about my expertise in that area.
        </p>
        <div class="grid grid-cols-1 gap-4">
            {skills.map((skill) => (
                <button
                    class="skill-item p-4 border border-white/10 hover:border-white/20 transition-colors text-left bg-black/20 hover:bg-black/30"
                    data-skill-id={skill.id}>
                    <h3 class="text-lg font-bold mb-2">{skill.title}</h3>
                    <p class="text-sm opacity-80">{skill.technologies}</p>
                </button>
            ))}
        </div>
        <p class="mt-4">
            <a href="#" class="tab-link text-primary border-b border-dotted">
                View my certifications
            </a>
        </p>
    </div>
</div>

<style>
.skill-item {
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s ease;
}

.skill-item.selected {
    background: rgba(255, 255, 255, 0.1) !important;
    border-color: rgba(255, 255, 255, 0.3) !important;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
}
</style> 