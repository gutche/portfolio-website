---
import { type TimelineEntry, timeline } from '../../data/timeline';

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["tab-panel", className]} data-tab="timeline">
    <div class="flex flex-col gap-4">
        <p class="text-base">
            My professional journey and key milestones in my career as a
            Software Engineer.
        </p>
        <div class="space-y-3">
            {timeline.map((entry) => (
                <button
                    class="timeline-item p-4 border border-white/10 hover:border-white/20 transition-colors text-left bg-black/20 hover:bg-black/30 w-full"
                    data-period={entry.period}
                    data-role={entry.role}
                    data-company={entry.company}>
                    <p class="font-bold">{entry.period}</p>
                    <p>
                        {entry.role} at {entry.company}
                    </p>
                </button>
            ))}
        </div>
    </div>
</div>

<style>
.timeline-item {
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s ease;
}

.timeline-item.selected {
    background: rgba(255, 255, 255, 0.1) !important;
    border-color: rgba(255, 255, 255, 0.3) !important;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
}
</style> 