---
import { type Social, socials } from '../../data/socials';

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["tab-panel", className]} data-tab="socials">
    <div class="flex flex-col gap-4">
        <p class="text-base">
            Connect with me on various social platforms and professional networks.
        </p>
        <div class="space-y-3">
            {socials.map((social) => (
                <button
                    class="social-item p-4 border border-white/10 hover:border-white/20 transition-colors text-left bg-black/20 hover:bg-black/30 w-full"
                    data-name={social.name}
                    data-url={social.url}>
                    <p class="font-bold">{social.name}</p>
                    <p class="text-sm opacity-80">{social.url}</p>
                </button>
            ))}
        </div>
    </div>
</div>

<style>
.social-item {
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s ease;
}

.social-item.selected {
    background: rgba(255, 255, 255, 0.1) !important;
    border-color: rgba(255, 255, 255, 0.3) !important;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
}
</style> 