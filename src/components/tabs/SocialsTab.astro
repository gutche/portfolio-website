---
import { type Social, socials } from '../../data/socials';

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["tab-panel", className]} data-tab="socials">
    <div class="flex flex-col gap-4">
        <p class="text-base">
            Connect with me on various social platforms and professional networks.
        </p>
        <ul class="space-y-2">
            {socials.map((social) => (
                <li>
                    <a href={social.url} class="tab-link text-primary border-b border-dotted">
                        {social.name}
                    </a>
                </li>
            ))}
        </ul>
    </div>
</div> 